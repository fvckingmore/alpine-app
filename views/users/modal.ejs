<div x-cloak x-show="modal" x-transition>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Agregar Usuario</h5>
			</div>
			<div class="modal-body">
					<div class="form-group">
						<label for="exampleInputEmail1">Usuario:</label>
						<input x-model="user" type="text" class="form-control" placeholder="Ingrese usuario">
						<!-- <p x-text="user"></p> -->
					</div>

					<div class="form-group">
						<label >Contraseña:</label>
						<input x-model="password" type="password" class="form-control" placeholder="Ingrese contraseña">
						<!-- <p x-text="password"></p> -->
					</div>


				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-danger" data-bs-dismiss="modal" @click="closeModal">x</button>
						
					<button x-show="!edit" type="button" class="btn btn-primary" @click="addUser">+</button>
					<button x-show="edit" type="button" class="btn btn-primary" @click="addUser(true)">*</button>


				</div>
		</div>
	</div>
</div>